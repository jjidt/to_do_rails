<h1><%= @task.name %></h1>

  <p>Due Date: <%= @task.due %></p>
  <p><a href= "/tasks/<%= @task.id %>/edit">Edit Task</a></p>
  <p><a href= "/tasks/<%= @task.id %>/" data-confirm = "You sure?" data-method = "delete" rel = "nofollow">Delete Task</a></p>
  <p><a href= "/tasks">Return to task list</a></p>

<form action="/tasks/<%= @task.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <input name="task[done]" type="hidden" value="true">
  <button>Mark done</button>
</form>
